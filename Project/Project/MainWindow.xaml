<Window x:Class="Project.MainWindow"
        x:Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Project" Height="800" Width="1280">
    <Grid>
        <Canvas x:Name="GameScreen"  Height="800" Width="1280" MouseDown="MouseDown" MouseUp="MouseUp">
            <!--Draw a circle with blue size-->

            <Ellipse
            x:Name="Player"
            Width="20"
            Height="20"
            Fill="Blue"
            Canvas.Left="898"
            Canvas.Top="375" RenderTransformOrigin="2.745,-2.521"
        >
            </Ellipse>

            <Ellipse
            x:Name="Sun"    
            Width="300"
            Height="300"
            Fill="Red"
            Canvas.Left="490"
            Canvas.Top="250" HorizontalAlignment="Left" VerticalAlignment="Top"
            >
            </Ellipse>

        </Canvas>
    </Grid>


</Window>
